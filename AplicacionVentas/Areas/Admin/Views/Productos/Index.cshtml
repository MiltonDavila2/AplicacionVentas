@model IEnumerable<Producto>

@{
    ViewData["Title"] = "Productos";
}

<h1>Productos en la tienda</h1>

<p>
    <a asp-action="Create">Ingresar nuevo producto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Categoria</th>
            <th>Imagen</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Nombre
                </td>
                <td>
                    @item.Precio.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("en-US"))
                </td>
                <td>
                    @item.Categoria.nombre
                </td>
                <td>
                    <img src="/media/productos/@item.Imagen" width="100" alt="" />
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> 
                    <a asp-action="Details" asp-route-id="@item.Id">Ver detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="confirmDeletion">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>



<div class="pagination-container">
    <pagination class="pagination-link"
                page-count="@ViewBag.TotalPages"
                page-target="/admin/productos/@ViewBag.CategorySlug"
                page-number="@ViewBag.PageNumber"
                page-range="@ViewBag.PageRange">
    </pagination>
</div>

